.pure-menu-scrollable
  overflow-y scroll
  overflow-x hidden
  .pure-menu-list
    display block

.pure-menu-horizontal
  &.pure-menu-scrollable
    white-space nowrap
    overflow-y hidden
    overflow-x auto
    overflow-style none
    overflow-scrolling touch
    padding .5em 0
    .pure-menu-list
      display inline-block
    &::-webkit-scrollbar
      display none

