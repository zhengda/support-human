#dashboard_container
  position absolute
  top 0
  width 100%
  height 100%
  overflow-x hidden
  overflow-y auto
  box-sizing border-box
  padding 16px
  -webkit-overflow-scrolling touch
  text-align center

  #dashboard
    center(960px)
    min-height 100%
    #app_form
      text-align left

  #app_preview,
  #app_form
    column(1/1)

  #copyright
    margin 0 0 100px

  @media screen and (min-width: 640px)
    #dashboard
      margin-top 40px
    #app_preview
      column(7/12)
    #app_form
      column(5/12)
